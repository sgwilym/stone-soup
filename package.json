{
  "name": "stone-soup",
  "version": "1.0.0",
  "description": "",
  "repository": "",
  "author": "Cinnamon <cinnamon_bun_github@fastmail.com>",
  "homepage": "https://github.com/earthstar-project/stone-soup",
  "license": "AGPL-3.0",
  "main": "build/index.js",
  "type": "module",
  "types": "build/index.d.ts",
  "browser": {
    "./build/index.js": "./build/index.browser.js",
    "./build/crypto-driver-node.js": false,
    "tap": "tape"
  },
  "exports": {
    ".": {
      "node": {
        "require": "./dist/earthstar.cjs",
        "import": "./dist/earthstar.mjs"
      },
      "default": "./dist/earthstar.js"
    },
    "./browser": "./dist/browser/browser.js",
    "./node": {
      "require": "./dist/node/node.cjs",
      "default": "./dist/node/node.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf build coverage .nyc_output",
    "build": "rm -rf dist && node ./scripts/build.mjs",
    "clean-build-test": "yarn clean && yarn build && yarn test",
    "start": "node build/example-app.js",
    "browserify": "mkdir -p browserify-tests && browserify build/test/*.test.js build/test/browser-run.js > browserify-tests/bundle.js",
    "browser-run": "cat browserify-tests/bundle.js | browser-run | tap-spec",
    "test-in-browser": "yarn clean && yarn build && yarn browserify && yarn browser-run",
    "test": "tap --timeout=120 --no-bail build/test/*.test.js",
    "test2": "tap -Rspecy --no-bail --jobs=1 build/test/*.test.js",
    "test-coverage": "yarn test --coverage-report=lcov",
    "test-addresses": "tap -Rspecy --no-bail --jobs=1 build/test/addresses.test.js",
    "test-base32": "tap -Rspecy --no-bail --jobs=1 build/test/base32.test.js",
    "test-bytes": "tap -Rspecy --no-bail --jobs=1 build/test/bytes.test.js",
    "test-characters": "tap -Rspecy --no-bail --jobs=1 build/test/characters.test.js",
    "test-checkers": "tap -Rspecy --no-bail --jobs=1 build/test/checkers.test.js",
    "test-crypto-driver-chloride": "tap -Rspecy --no-bail --jobs=1 build/test/crypto-driver-chloride.test.js",
    "test-crypto-driver-node": "tap -Rspecy --no-bail --jobs=1 build/test/crypto-driver-node.test.js",
    "test-crypto-driver-tweetnacl": "tap -Rspecy --no-bail --jobs=1 build/test/crypto-driver-tweetnacl.test.js",
    "test-crypto-driver-compat": "tap -Rspecy --no-bail --jobs=1 build/test/crypto-driver-compat.test.js",
    "test-crypto-drivers": "tap -Rspecy --no-bail --jobs=1 build/test/crypto-driver-*.test.js",
    "watch-test": "onchange -i src/*.ts src/test/*.ts -- yarn build-and-test",
    "prepublishOnly": "yarn clean && yarn build",
    "depchart-main": "depchart `find src | grep .ts` --exclude src/decls.d.ts src/index.ts src/index.browser.ts `find src | grep '/test/'` `find src | grep '/util/'` --rankdir LR -o depchart/depchart-main --node_modules omit",
    "depchart-deps": "depchart `find src | grep .ts` --exclude src/decls.d.ts src/index.ts src/index.browser.ts `find src | grep '/test/'` `find src | grep '/util/'` --rankdir LR -o depchart/depchart-deps --node_modules integrated",
    "depchart-loose": "depchart `find src | grep .ts` --exclude src/decls.d.ts src/index.ts src/index.browser.ts `find src | grep '/test/'` `find src | grep '/util/'` --loose --rankdir LR -o depchart/depchart-loose --node_modules omit",
    "depchart": "yarn depchart-main & yarn depchart-deps & yarn depchart-loose && echo 'done'"
  },
  "devDependencies": {
    "@types/browser-or-node": "^1.3.0",
    "@types/node": "^14.14.41",
    "@types/tap": "^14.10.2",
    "@types/tape": "^4.13.0",
    "browser-run": "^10.1.0",
    "browserify": "^17.0.0",
    "depchart": "^1.2.0",
    "esbuild": "^0.11.13",
    "onchange": "^7.1.0",
    "tap": "^14.11.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.2.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "browser-or-node": "^1.3.0",
    "chalk": "^4.1.1",
    "chloride": "^2.4.1",
    "fast-deep-equal": "^3.1.3",
    "rfc4648": "^1.4.0",
    "rfdc": "^1.2.0",
    "sha256-uint8array": "^0.10.0",
    "tweetnacl": "^1.0.3"
  }
}
